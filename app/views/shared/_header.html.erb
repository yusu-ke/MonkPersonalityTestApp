<header class="shadow-sm body-font p-1 border-b lg:border-b-6 lg:h-18">
  <div class="flex justify-between md:flex-row text-gray-900">
    <a href="<%= root_path %>" class="flex title-font font-medium items-center mb-4 md:mb-0">
      <%= image_tag('22225678.png', alt: "名僧診断", class: 'w-10 h-10 text-white p-0.5 bg-blue-300 rounded-full') %>
      <span class="ml-3 text-sm md:text-3xl lg:text-4xl"><%= t("views.header.title")%></span>
    </a>

    <div class="flex-none">
      <ul class="menu menu-horizontal flex items-center text-black">
        <li>
          <details class="relative">
            <summary class="mr-2"><%= t("views.navigation.menu")%></summary>
            <ul class="bg-my_white px-1 py-2 rounded-md text-sm top-7 right-1 leading-normal w-48 z-50 dark:bg-gray-700 dark:text-white">
              <% if user_signed_in? %>
                <li><%= link_to t('views.navigation.posts_list'), posts_path %></li>
                <li><%= link_to t('views.navigation.new_post'), new_post_path %></li>
                <li><%= link_to t('views.navigation.my_page'), profile_path %></li>
                <li><%= link_to t('views.navigation.logout'), destroy_user_session_path, data: { turbo_method: :delete } %></li>
                <hr class="my-2 h-0.5 border-t-0 bg-neutral-100" />
                <li><%= link_to t('views.navigation.user_info'), user_info_profile_path %></li>
                <li><%= link_to t('views.navigation.privacy_policy'), privacy_path %></li>
                <li><%= link_to t('views.navigation.terms_of_service'), terms_path %></li>
                <li><%= link_to t('views.navigation.contact'), contact_path %></li>
              <% else %>
                <li><%= link_to t('views.navigation.new_post'), new_user_registration_path, data: { turbo: false }  %></li>
                <li><%= link_to t('views.navigation.login'), new_user_session_path %></li>
                <hr class="my-2 h-0.5 border-t-0 bg-neutral-100" />
                <li><%= link_to t('views.navigation.privacy_policy'), privacy_path %></li>
                <li><%= link_to t('views.navigation.terms_of_service'), terms_path %></li>
                <li><%= link_to t('views.navigation.contact'), contact_path %></li>
              <% end %>
            </ul>
          </details>
        </li>
      </ul>
    </div>
  </div>
</header>
