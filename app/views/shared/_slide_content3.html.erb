<div class="flex flex-col items-center justify-center px-6">
  <p class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-extrabold text-gray-800 bg-gradient-to-r from-gold1 to-gold2 px-6 py-2 rounded-md shadow-lg">発見</p>
  <p class="text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl mt-3 text-gray-600">投稿を見て新しい発見</p>

  <div class="flex justify-center mt-8">
    <%= picture_tag do %>
      <%= tag(:source, srcset: image_path("mobile_size_modal3.jpg"), media: "(max-width: 940px)") %>
      <%= image_tag "modal_slide3.jpg", alt: "モーダル３", class: "xl:h-[330px] lg:h-[400px] lg:w-[700px] w-full h-[300px] object-cover border-4 border-gray-200 shadow-md", style: "object-position: center 10%;" %>
    <% end %>
  </div>

  <div class="modal-action">
    <button id="btn" class="lg:text-xl btn rounded border text-black bg-gradient-to-r from-[#a48953] to-[#8c7444] hover:from-white hover:to-white hover:text-gold1 hover:border-gold1">始める</button>
  </div>
</div>
