<h1>新規投稿</h1>
<%= form_with model: @post, class: "new_board" do |f| %>
  <div class="mb-3">
    <%= f.label : temple_name %>
    <%= f.text_field :temple_name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label : location %>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>